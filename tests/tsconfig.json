{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "ES5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "../node_modules/",
    "../dist/"
  ],
  "include": [
    "./**/*.ts"
  ]
}